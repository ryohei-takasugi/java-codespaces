{
  "name": "java21-gradle",
  "image": "mcr.microsoft.com/devcontainers/java:1-21-bookworm",
  "containerEnv": {
    "GRADLE_VERSION": "8.10.2",
    "GRADLE_HOME": "/opt/gradle/gradle-8.10.2",
    "JAVA_HOME": "/usr/lib/jvm/msopenjdk-current"
  },
  "remoteEnv": {
    "GRADLE_VERSION": "8.10.2",
    "GRADLE_HOME": "/opt/gradle/gradle-8.10.2",
    "JAVA_HOME": "/usr/lib/jvm/msopenjdk-current",
    "PATH": "${containerEnv:PATH}:${containerEnv:GRADLE_HOME}/bin:${containerEnv:JAVA_HOME}/bin"
  },
  "postCreateCommand": "chmod +x .devcontainer/devcontainer-setup.sh && ./.devcontainer/devcontainer-setup.sh",
  "customizations": {
    "vscode": {
      "settings": {
        "java.import.gradle.java.home": "/usr/lib/jvm/msopenjdk-current",
        "java.jdt.ls.java.home": "/usr/lib/jvm/msopenjdk-current",
        "maven.terminal.useJavaHome": true,
        "java.configuration.runtimes": [
          {
            "name": "JavaSE-21",
            "path": "/usr/lib/jvm/msopenjdk-current"
          }
        ],
        "terminal.integrated.env.linux": {
          "GRADLE_VERSION": "8.10.2",
          "GRADLE_HOME": "/opt/gradle/gradle-8.10.2",
          "JAVA_HOME": "/usr/lib/jvm/msopenjdk-current",
          "PATH": "${containerEnv:PATH}:${containerEnv:GRADLE_HOME}/bin:${containerEnv:JAVA_HOME}/bin"
        }
      },
      "extensions": [
        "vscjava.vscode-java-pack",
        "redhat.java",
        "vscjava.vscode-gradle"
      ]
    }
  }
}